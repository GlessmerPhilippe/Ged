{{ form_start(form) }}
<div class="row">
	<div class="col-12">
		<div class="mb-3">
			{{ form_label(form.title, 'Titre du document') }}
			{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.title) }}
		</div>
	</div>
	<div class="col-4">
		<div class="mb-3">
			{{ form_label(form.categorie, 'Catégorie') }}
			{{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
			{{ form_errors(form.categorie) }}
		</div>
	</div>
	<div class="col-4">
		<div class="mb-3">
			{{ form_label(form.ItemCategorie, 'Item Catégorie') }}
			{{ form_widget(form.ItemCategorie, {'attr': {'class': 'form-select'}}) }}
			{{ form_errors(form.ItemCategorie) }}
		</div>
	</div>
    <div class="col-4">
		<div class="mb-3">
			{{ form_label(form.person, 'Personnes associées') }}
			{{ form_widget(form.person, {'attr': {'class': 'form-select', 'multiple': 'multiple'}}) }}
			{{ form_errors(form.person) }}
		</div>
	</div>
	<div class="mb-3">
		{{ form_label(form.date, 'Date') }}
		{{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.date) }}
	</div>
	<div class="mb-3">
		{{ form_label(form.tags, 'Tags') }}
		{{ form_widget(form.tags, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.tags) }}
	</div>
    <div class="mb-3">
		{{ form_label(form.gscFile, 'Document PDF') }}
		{{ form_widget(form.gscFile, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.gscFile) }}
	</div>
</div>
<button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
<a href="{{ path('app_ged_document_index') }}" class="btn btn-secondary ms-2">Annuler</a>
{{ form_end(form) }}
